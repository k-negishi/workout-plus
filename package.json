{
  "name": "workout-plus",
  "private": true,
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.4.0"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "packageManager": "pnpm@10.30.1",
  "lint-staged": {
    "apps/mobile/**/*.{ts,tsx}": [
      "pnpm --filter mobile lint --fix",
      "pnpm --filter mobile exec prettier --write"
    ],
    "packages/api/**/*.ts": [
      "pnpm --filter @workout-plus/api lint --fix",
      "pnpm --filter @workout-plus/api exec prettier --write"
    ]
  }
}
